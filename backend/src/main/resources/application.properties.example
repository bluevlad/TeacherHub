spring.application.name=teacherhub-backend
server.port=8081

# Database (PostgreSQL)
# Local: postgres/postgres (docker-compose.local.yml)
# Production: use environment variables
spring.datasource.url=${SPRING_DATASOURCE_URL:jdbc:postgresql://localhost:5432/teacherhub}
spring.datasource.username=${SPRING_DATASOURCE_USERNAME:postgres}
spring.datasource.password=${SPRING_DATASOURCE_PASSWORD:postgres}
spring.datasource.driver-class-name=org.postgresql.Driver

spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true

# CORS
cors.allowed-origins=${CORS_ALLOWED_ORIGINS:http://localhost:3000}

# Admin API Key (optional - empty means no auth required)
app.admin.api-key=${ADMIN_API_KEY:}
